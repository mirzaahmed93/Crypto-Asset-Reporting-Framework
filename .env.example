# ====================
# Blockchain Data Provider Configuration
# ====================

# Provider: 'blockchain.com' or 'blockbook'
BLOCKCHAIN_PROVIDER=blockchain.com

# Blockchain.com API configuration
BLOCKCHAIN_COM_API_KEY=your_api_key_here
BLOCKCHAIN_COM_BASE_URL=https://blockchain.info

# Blockbook API configuration (if using Blockbook)
BLOCKBOOK_BASE_URL=https://eth.blockbook.info

# ====================
# Privacy & Encryption
# ====================

# Path to encryption key file (AES-256)
ENCRYPTION_KEY_PATH=./vault/encryption_key.key

# Salt for pseudonymization (generate random for production)
PSEUDONYMIZATION_SALT=your_random_salt_here_replace_in_production

# ====================
# HMRC CARF Configuration
# ====================

# CARF reporting threshold in GBP
CARF_THRESHOLD_GBP=10000

# Reporting entity name
REPORTING_ENTITY_NAME=Your Organization Ltd

# Current UK tax year (YYYY-YYYY format)
TAX_YEAR=2025-2026

# ====================
# Exchange Rates (Should be fetched from API in production)
# ====================

ETH_TO_GBP_RATE=1800.00
BTC_TO_GBP_RATE=35000.00

# ====================
# Logging & Audit
# ====================

LOG_LEVEL=INFO
AUDIT_TRAIL_PATH=./data/audit_trail.json

# ====================
# Data Storage
# ====================

DATA_OUTPUT_PATH=./data
VAULT_PATH=./vault
